<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:background="@drawable/background_gradient">

    <Space
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <EditText
        android:id="@+id/eT_REmail"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="7dp"
        android:textAlignment="center"
        android:textColorHint="#FFFF"
        app:backgroundTint="#FFFF"
        android:textColor="#FFFF"/>


    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <EditText
        android:id="@+id/et_RUsername"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Nome de Utilizador"
        android:inputType="textEmailAddress"
        android:paddingLeft="7dp"
        android:textAlignment="center"
        android:textColorHint="#FFFF"
        app:backgroundTint="#FFFF"
        android:textColor="#FFFF"/>


    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <EditText
        android:id="@+id/eT_RPassword"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="7dp"
        android:textAlignment="center"
        android:textColor="#FFFF"
        android:textColorHint="#FFFF"
        app:backgroundTint="#FFFF" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <EditText
        android:id="@+id/eT_RepPassword"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Repetir Password"
        android:inputType="textPassword"
        android:paddingLeft="7dp"
        android:textAlignment="center"
        android:textColor="#FFFF"
        android:textColorHint="#FFFF"
        app:backgroundTint="#FFFF" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/btn_RRegistar"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_forms"
        android:text="Registar"
        android:textColor="#FFFF"
        android:textSize="17sp"/>

</LinearLayout>

